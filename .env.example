# =============================================================================
# SCHERTZINGER TRADING COMMAND v6.2 - CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: API Keys
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...your-key-here...

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION
# -----------------------------------------------------------------------------
WALLET_ADDRESS=0x55509AA76E2769eCCa5B4293359e3001dA16dd0F

# -----------------------------------------------------------------------------
# STRATEGY 1: BASE DEX TRADING (Original)
# Trades tokens on Base network via Coinbase Agentic Wallet
# -----------------------------------------------------------------------------
TRADING_ENABLED=true              # Set to false for dry-run mode
MAX_TRADE_SIZE_USDC=10            # Maximum trade size per transaction
TRADING_INTERVAL_MINUTES=2         # v6.0: 2-minute cycles (light/heavy pattern guards AI calls)

# -----------------------------------------------------------------------------
# STRATEGY 2: POLYMARKET ARBITRAGE (NEW - The $500K Strategy)
# Scans for YES+NO < $1 opportunities on 5-minute crypto markets
# -----------------------------------------------------------------------------
POLYMARKET_ARB_ENABLED=true       # Enable arbitrage scanning
POLYMARKET_MIN_SPREAD=0.02        # Minimum spread to trade (0.02 = 2%)
POLYMARKET_MAX_TRADE=50           # Max per arbitrage trade
POLYMARKET_SCAN_INTERVAL=30       # Scan interval in seconds
POLYMARKET_TRADING_ENABLED=false  # Set true to execute (needs API keys)

# Polymarket API credentials (required for trading)
# Get these from: https://docs.polymarket.com
POLYMARKET_API_KEY=
POLYMARKET_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# STRATEGY 3: POLYMARKET PREDICTION (NEW - AI Predictions)
# Uses Claude to predict 5-minute price movements
# -----------------------------------------------------------------------------
POLYMARKET_PREDICT_ENABLED=false  # Enable prediction strategy
POLYMARKET_MAX_BET=25             # Max per prediction bet
POLYMARKET_CONFIDENCE=0.7         # Min confidence to trade (0-1)

# -----------------------------------------------------------------------------
# v6.1: AUTO-HARVEST (Profit Transfers to Owner Wallet)
# Automatically sends realized ETH profits to your Coinbase wallet
# Runs every heavy cycle - checks profit threshold, cooldown, and gas reserve
# -----------------------------------------------------------------------------
AUTO_HARVEST_ENABLED=false                    # Set true to enable profit auto-transfer
PROFIT_DESTINATION_WALLET=                    # Your Coinbase/personal wallet address
AUTO_HARVEST_THRESHOLD_USD=25                 # Min unrealized profit (USD) before sending
AUTO_HARVEST_MIN_ETH_RESERVE=0.002            # Keep this much ETH for gas fees
AUTO_HARVEST_COOLDOWN_HOURS=24                # Hours between auto-harvest transfers

# -----------------------------------------------------------------------------
# ALERTS & MONITORING (Optional)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=               # For trade notifications
TELEGRAM_CHAT_ID=                 # Your Telegram chat ID
DISCORD_WEBHOOK=                  # Discord webhook URL

# -----------------------------------------------------------------------------
# ADVANCED SETTINGS
# -----------------------------------------------------------------------------
LOG_LEVEL=info                    # debug, info, warn, error
DRY_RUN_ALL=false                 # Override all trading to dry-run

# -----------------------------------------------------------------------------
# v6.0: STOCK & ETF TRADING (Alpaca Markets)
# 18 symbols: AAPL, MSFT, NVDA, GOOGL, AMZN, META, TSLA, COIN, PLTR, AMD,
#             SPY, QQQ, IWM, ARKK, BITQ, VTI, XLK, SOXX
# -----------------------------------------------------------------------------
STOCK_TRADING_ENABLED=false        # Enable equity integration
STOCK_DRY_RUN=true                 # Dry run mode (logs but doesn't execute)
ALPACA_API_KEY_ID=                 # From Alpaca dashboard
ALPACA_API_SECRET_KEY=             # From Alpaca dashboard
ALPACA_PAPER=true                  # Use paper trading (recommended to start)
STOCK_EQUITY_BUDGET_USD=200        # Total equity budget
STOCK_EQUITY_BUDGET_PCT=40         # % of total portfolio for equities
STOCK_MAX_TRADE_USD=25             # Max per stock trade
STOCK_MAX_POSITION_PCT=20          # Max single stock % of equity portfolio
STOCK_MAX_TRADES_PER_CYCLE=3       # Max stock trades per heavy cycle

# -----------------------------------------------------------------------------
# v6.0: DERIVATIVES (Coinbase Advanced Trade - Perps + Commodity Futures)
# -----------------------------------------------------------------------------
DERIVATIVES_ENABLED=false          # Enable derivatives module
DERIVATIVES_MAX_LEVERAGE=3         # Max leverage for derivatives
DERIVATIVES_BASE_POSITION_USD=50   # Base position size
COINBASE_ADV_API_KEY_ID=           # Coinbase Advanced Trade API Key ID
COINBASE_ADV_API_KEY_SECRET=       # Coinbase Advanced Trade API Secret
